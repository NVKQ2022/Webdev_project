}

<style>
    .box-container {
        background-color: white;
        padding: 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin-top: 50px;
        margin-bottom: 50px;
        overflow: hidden;
    }

    .section-header {
        color: white;
        font-weight: bold;
        font-size: 1.4rem;
        padding: 12px 20px;
        background: linear-gradient(90deg, #3a7bd5, #6a11cb);
        margin-bottom: 15px;
    }

    .content-padding {
        padding: 20px;
        line-height: 1.6;
    }

    h4 {
        margin-top: 20px;
        color: #6a11cb;
    }

    ul {
        margin-top: 10px;
        margin-bottom: 10px;
        padding-left: 20px;
    }
</style>

<div class="container box-container">
    <div class="section-header">
        <i class="bi bi-question-circle"></i> @ViewData["Title"] của WDShop
    </div>
