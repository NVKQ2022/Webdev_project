
@{
    var notifi = ViewBag.Notifications;
    var userName = ViewBag.Username;
}

<style>
    .accordion-button {
        font-size: 0.95rem;
        padding: 0.75rem 1rem;
        color: #333;
        background-color: transparent;
        box-shadow: none;
    }

    .accordion-body a {
        display: block;
        padding: 0.35rem 0;
        color: #333;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .accordion-body a:hover {
            text-decoration: underline;
        }

    .sidebar-heading {
        font-weight: 600;
        font-size: 1rem;
        margin-top: 1rem;
        margin-bottom: 0.5rem;
        padding-left: 1rem;
        color: #555;
    }

    .accordion-item {
        border: none;
    }

    .notification-item {
        background-color: #fff8f6;
        border-bottom: 1px solid #f0eaea;
    }

        .notification-item:hover {
            background-color: #fff3f0;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-white border-end">
            <div class="py-3 px-2">
                <div class="d-flex align-items-center mb-3">
                    <img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png" width="40" class="me-2 rounded-circle" />
                    <div>
                        <strong>@userName</strong><br />
                        <a href="#" style="font-size: 0.85rem;">Sửa Hồ Sơ</a>
                    </div>
                </div>

                <div class="accordion" id="sidebarAccordion">
                    <!-- Thông Báo -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingNotify">
                            <button class="accordion-button fw-semibold text-danger" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNotify" aria-expanded="true" aria-controls="collapseNotify">
                                Thông Báo
                            </button>
                        </h2>
                        <div id="collapseNotify" class="accordion-collapse collapse show" aria-labelledby="headingNotify">
                            <div class="accordion-body ps-4">
                                <ul class="list-unstyled mb-0">
                                    <li><a href="#">Cập Nhật Đơn Hàng</a></li>
                                    <li><a href="#">Khuyến Mãi</a></li>
                                    <li><a href="#">Cập Nhật Ví</a></li>
                                    <li><a href="#">Cập Nhật Shopee</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Tài Khoản Của Tôi -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingAccount">
                            <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAccount" aria-expanded="false" aria-controls="collapseAccount">
                                Tài Khoản Của Tôi
                            </button>
                        </h2>
                        <div id="collapseAccount" class="accordion-collapse collapse" aria-labelledby="headingAccount">
                            <div class="accordion-body ps-4">
                                <ul class="list-unstyled mb-0">
                                    <li><a href="#">Hồ sơ</a></li>
                                    <li><a href="#">Đổi mật khẩu</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Đơn Mua -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingPurchase">
                            <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePurchase" aria-expanded="false" aria-controls="collapsePurchase">
                                Đơn Mua
                            </button>
                        </h2>
                        <div id="collapsePurchase" class="accordion-collapse collapse" aria-labelledby="headingPurchase">
                            <div class="accordion-body ps-4">
                                <ul class="list-unstyled mb-0">
                                    <li><a href="#">Chờ xác nhận</a></li>
                                    <li><a href="#">Đang giao</a></li>
                                    <li><a href="#">Hoàn tất</a></li>
                                    <li><a href="#">Đã hủy</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                   @*  <!-- Others (Voucher, Xu, etc.) -->
                    <div class="accordion-item border-0">
                        <div class="accordion-body ps-3">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Kho Voucher</a></li>
                                <li><a href="#">Shopee Xu</a></li>
                                <li><a href="#" class="text-danger fw-semibold">6.6 Siêu Sale Giữa Năm <span class="badge bg-warning text-dark ms-1">New</span></a></li>
                            </ul>
                        </div>
                    </div *@>
                </div>
            </div>
        </div>

        <!-- Notifications -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center p-3 border-bottom bg-white">
                <h5 class="mb-0">Cập Nhật Đơn Hàng</h5>
                <a href="#" class="btn btn-outline-secondary btn-sm">Đánh dấu Đã đọc tất cả</a>
            </div>

            @foreach (var n in notifi)
            {
                <div class="d-flex notification-item py-3 px-3 align-items-start">
                    <img src="@n.ImageUrl" width="100" height="100" class="me-3 rounded border" style="object-fit: cover;" />
                    <div class="flex-grow-1">
                        <div class="fw-bold">@n.Status</div>
                        <div>
                            @if (!string.IsNullOrEmpty(n.PackageCode))
                            {
                                <span>Kiện hàng <strong>@n.PackageCode</strong></span>
                            }
                            @if (!string.IsNullOrEmpty(n.OrderCode))
                            {
                                <span> của đơn hàng <strong>@n.OrderCode</strong></span>
                            }
                            <span> @n.Message</span>
                        </div>
                        <div class="text-muted small">@n.Date.ToString("HH:mm dd-MM-yyyy")</div>
                    </div>
                    <div>
                        <button class="btn btn-outline-secondary btn-sm">@n.ButtonText</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
